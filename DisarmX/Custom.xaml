<Window x:Class="DisarmX.Custom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CUSTOM BOARD" Height="205" Width="268" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFBCD1C2"/>
            <GradientStop Color="#FF40F170" Offset="0.816"/>
            <GradientStop Color="#FF3FEF3F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Canvas Margin="10" Background="Transparent">
        <Label Content="X: " Canvas.Left="32" Canvas.Top="27"/>
        <Label Content="Y:" Canvas.Left="32" Canvas.Top="53"/>
        <Label Content="Miny:" Canvas.Left="32" Canvas.Top="79"/>
        <TextBox x:Name="tbWidth" Height="23" Canvas.Left="85" TextWrapping="Wrap" Text="30" Canvas.Top="29" Width="120"/>
        <TextBox x:Name="tbHeight" Height="23" Canvas.Left="85" TextWrapping="Wrap" Text="40" Canvas.Top="55" Width="120"/>
        <TextBox x:Name="tbMines" Height="23" Canvas.Left="85" TextWrapping="Wrap" Text="150" Canvas.Top="81" Width="120"/>
        <Button x:Name="btSet" Content="OK" Canvas.Left="40" Canvas.Top="110" Width="75" Click="btSet_Click"/>
        <Button x:Name="btCancel" Content="Anuluj" Canvas.Left="130" Canvas.Top="110" Width="75" Click="btCancel_Click"/>
    </Canvas>

</Window>
